<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-tshirt"></i> Welcome to The Archive </h1>
            <p>View amazing hand-picked garments curated by users from all over the world</p>
            <p>
                <a class="btn btn-dark btn-large" href = "/garments/new">Add new garment!</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular garments:</h3>
        </div>
    </div>
    <!-- Todo: Need to standarise image sizes (like grailed) -->
    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% garments.forEach(function(garment){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail thumbnail-style">
                    <img src="<%= garment.image %>">
                    <div class="caption">
                        <h4><strong><%= garment.name %></strong><h4>
                    </div>
                    <p>
                        <a href="/garments/<%= garment._id %>" class = "btn btn-dark">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
